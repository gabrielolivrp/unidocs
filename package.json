{
  "name": "unidocs",
  "private": true,
  "workspaces": [
    "packages/**",
    "apps/**"
  ],
  "scripts": {
    "web:lint": "yarn workspace @unidocs/web lint",
    "web:dev": "yarn workspace @unidocs/web dev",
    "ipfs:dev": "yarn workspace @unidocs/ipfs dev",
    "contracts:lint": "yarn workspace @unidocs/contracts lint",
    "contracts:chain": "yarn workspace @unidocs/contracts chain",
    "contracts:test": "yarn workspace @unidocs/contracts test",
    "contracts:compile": "yarn workspace @unidocs/contracts compile",
    "contracts:deploy": "yarn workspace @unidocs/contracts deploy",
    "bootstrap": "npx lerna bootstrap --use-workspaces"
  },
  "devDependencies": {
    "lerna": "^3.22.1"
  }
}
